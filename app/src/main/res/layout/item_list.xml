<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/InfoLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="410dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Nivell"
            android:layout_width="107dp"
            android:layout_height="33dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/incidencia"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <ImageView
            android:id="@+id/EstatColor"
            android:layout_width="59dp"
            android:layout_height="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Nivell"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@color/Orange" />

        <TextView
            android:id="@+id/EstatType"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/EstatColor"
            android:layout_alignTop="@+id/EstatColor"
            android:layout_alignRight="@+id/EstatColor"
            android:layout_alignBottom="@+id/EstatColor"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/EstatColor"
            app:layout_constraintEnd_toEndOf="@+id/EstatColor"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="@+id/EstatColor"
            app:layout_constraintTop_toTopOf="@+id/EstatColor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>